<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blank_bg"
    tools:context="com.xxjr.cfs_system.LuDan.view.activitys.gold_account.TopUpInfoActivity">

    <include
        android:id="@+id/top_up_title"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/ll_top_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/to_gold_bg"
        android:orientation="vertical"
        android:paddingBottom="45dp"
        android:paddingTop="@dimen/size_15"
        app:layout_constraintTop_toBottomOf="@id/top_up_title">

        <TextView
            android:id="@+id/tv_top_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/size_8"
            android:textColor="@color/detail1"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_5"
            android:text="充值码"
            android:textColor="@color/font_c9"
            android:textSize="@dimen/word_16" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_top_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:layout_marginTop="45dp"
        android:background="@drawable/theme_click"
        android:gravity="center"
        android:padding="@dimen/size_10"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/word_16"
        app:layout_constraintTop_toBottomOf="@id/ll_top_info" />
</android.support.constraint.ConstraintLayout>
