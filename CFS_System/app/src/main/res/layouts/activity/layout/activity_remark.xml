<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.xxjr.cfs_system.LuDan.view.activitys.RemarkActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_content"
                style="@style/horinzontalLiner"
                android:background="@drawable/clicked_white"
                android:gravity="center"
                android:padding="@dimen/size_12"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_10"
                    android:text="回退类型"
                    android:textColor="@color/font_c5"
                    android:textSize="@dimen/word_15" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_5"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/font_c5"
                    android:textColorHint="@color/font_c9"
                    android:textSize="@dimen/word_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/icon_right" />
            </LinearLayout>

            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginLeft="@dimen/size_12"
                android:background="@color/line"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_12"
                android:text="备注："
                android:textColor="@color/font_c5"
                android:textSize="@dimen/word_16" />

            <EditText
                android:id="@+id/et_yellow_pact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12"
                android:layout_marginRight="@dimen/size_12"
                android:background="#f2f2f2"
                android:gravity="left"
                android:hint="请填写黄单原因"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:minHeight="100dp"
                android:padding="@dimen/size_5"
                android:textColor="@color/font_c3"
                android:textColorHint="@color/font_c9"
                android:textSize="@dimen/word_15" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10"
                android:gravity="end"
                android:padding="5dp"
                android:text="0/100"
                android:textColor="@color/font_c6"
                android:textSize="@dimen/word_12" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/water"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false" />
    </RelativeLayout>
</LinearLayout>
