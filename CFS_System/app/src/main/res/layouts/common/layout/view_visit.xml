<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_visit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blank_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/size_5">

        <TextView
            android:id="@+id/tv_visit_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/word_14" />

        <ImageView
            android:id="@+id/iv_visit_time"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:background="@drawable/clicked"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_date_1" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>