<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8"
        android:background="@color/blank_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_5">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@mipmap/menu_rect" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/size_5"
            android:text="常用功能"
            android:textColor="@color/font_c3"
            android:textSize="@dimen/word_16" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:background="@drawable/message_bg"
            android:paddingBottom="@dimen/size_2"
            android:paddingLeft="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:paddingTop="@dimen/size_2"
            android:text="编辑"
            android:textColor="@color/font_home"
            android:textSize="@dimen/word_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_15"
        android:background="@color/blank_bg" />
</LinearLayout>