<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/size_10"
    android:paddingRight="@dimen/size_10"
    android:paddingTop="@dimen/size_10">

    <TextView
        android:id="@+id/tv_loan_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_5"
        android:paddingRight="@dimen/size_12"
        android:text="贷款编号"
        android:textColor="@color/font_c6"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_loan_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toRightOf="@id/tv_loan_code_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_loan_code_title" />

    <TextView
        android:id="@+id/tv_service_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:text="业务员"
        android:textColor="@color/font_c6"
        app:layout_constraintLeft_toLeftOf="@id/tv_loan_code_title"
        app:layout_constraintRight_toRightOf="@id/tv_loan_code_title"
        app:layout_constraintTop_toBottomOf="@id/tv_loan_code" />

    <TextView
        android:id="@+id/tv_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toRightOf="@id/tv_service_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_service_title" />

    <TextView
        android:id="@+id/tv_mortgage_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:text="按揭员"
        android:textColor="@color/font_c6"
        app:layout_constraintLeft_toLeftOf="@id/tv_loan_code_title"
        app:layout_constraintRight_toRightOf="@id/tv_loan_code_title"
        app:layout_constraintTop_toBottomOf="@id/tv_service" />

    <TextView
        android:id="@+id/tv_mortgage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toRightOf="@id/tv_mortgage_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_mortgage_title" />

    <TextView
        android:id="@+id/tv_customer_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:text="所属客户"
        android:textColor="@color/font_c6"
        app:layout_constraintLeft_toLeftOf="@id/tv_loan_code_title"
        app:layout_constraintRight_toRightOf="@id/tv_loan_code_title"
        app:layout_constraintTop_toBottomOf="@id/tv_mortgage" />

    <TextView
        android:id="@+id/tv_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_customer_title" />

    <TextView
        android:id="@+id/tv_loan_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:text="贷款产品"
        android:textColor="@color/font_c6"
        app:layout_constraintLeft_toLeftOf="@id/tv_loan_code_title"
        app:layout_constraintRight_toRightOf="@id/tv_loan_code_title"
        app:layout_constraintTop_toBottomOf="@id/tv_customer" />

    <TextView
        android:id="@+id/tv_loan_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toRightOf="@id/tv_loan_product_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_loan_product_title" />

    <TextView
        android:id="@+id/tv_lending_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:text="放款金额"
        android:textColor="@color/font_c6"
        app:layout_constraintLeft_toLeftOf="@id/tv_loan_code_title"
        app:layout_constraintRight_toRightOf="@id/tv_loan_code_title"
        app:layout_constraintTop_toBottomOf="@id/tv_loan_product" />

    <TextView
        android:id="@+id/tv_lending"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toRightOf="@id/tv_lending_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_lending_title" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_8"
        android:background="@color/blank_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_lending" />
</android.support.constraint.ConstraintLayout>