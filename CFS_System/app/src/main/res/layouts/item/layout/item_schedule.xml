<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="@dimen/size_1"
            android:layout_height="0dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginStart="3.5dp"
            android:layout_weight="1"
            android:background="@color/font_c6" />

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="@dimen/size_8"
            android:layout_height="@dimen/size_8"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_dot_new" />

        <TextView
            android:id="@+id/tv_line_1"
            android:layout_width="@dimen/size_1"
            android:layout_height="0dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginStart="3.5dp"
            android:layout_weight="1"
            android:background="@color/font_c6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/size_3">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginRight="@dimen/size_5"
            android:textColor="@color/font_c9"
            android:textSize="@dimen/word_12" />

        <TextView
            android:id="@+id/tv_name_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginRight="@dimen/size_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/font_c9"
            android:textSize="@dimen/word_12" />
    </LinearLayout>
</LinearLayout>
