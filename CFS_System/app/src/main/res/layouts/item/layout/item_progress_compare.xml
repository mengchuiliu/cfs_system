<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_10">

    <LinearLayout
        android:id="@+id/ll_show_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_6"
        android:paddingRight="@dimen/size_6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12"
                android:layout_marginRight="@dimen/size_12"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/font_c3" />

            <TextView
                android:id="@+id/tv_amount_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/font_c3"
                android:visibility="gone" />
        </LinearLayout>

        <com.xiaoxiao.widgets.PercentProgress
            android:id="@+id/progress_1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_marginRight="@dimen/size_6"
            android:layout_weight="1"
            android:progress="50"
            android:progressDrawable="@drawable/progress_color_5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_show_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_6"
        android:paddingRight="@dimen/size_6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12"
                android:layout_marginRight="@dimen/size_12"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/font_c3" />

            <TextView
                android:id="@+id/tv_amount_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/font_c3"
                android:visibility="gone" />
        </LinearLayout>

        <com.xiaoxiao.widgets.PercentProgress
            android:id="@+id/progress_2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_marginRight="@dimen/size_6"
            android:layout_weight="1"
            android:progress="50"
            android:progressDrawable="@drawable/progress_color_4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_show_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_6"
        android:paddingRight="@dimen/size_6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12"
                android:layout_marginRight="@dimen/size_12"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/font_c3" />

            <TextView
                android:id="@+id/tv_amount_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/font_c3"
                android:visibility="gone" />
        </LinearLayout>

        <com.xiaoxiao.widgets.PercentProgress
            android:id="@+id/progress_3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_marginRight="@dimen/size_6"
            android:layout_weight="1"
            android:progress="50"
            android:progressDrawable="@drawable/progress_color_3" />
    </LinearLayout>
</LinearLayout>