<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_gold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_12"
        android:text="金账户"
        android:textColor="@color/font_home"
        android:textSize="@dimen/word_15" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:background="@drawable/gold_info_bg"
        android:padding="@dimen/size_12"
        app:layout_constraintTop_toBottomOf="@id/tv_gold">

        <ImageView
            android:id="@+id/iv_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gold_logo" />

        <TextView
            android:id="@+id/tv_gold_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:text="户名"
            android:textColor="@color/font_c9"
            app:layout_constraintLeft_toRightOf="@id/iv_gold" />

        <TextView
            android:id="@+id/tv_gold_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/font_c3"
            app:layout_constraintLeft_toLeftOf="@id/tv_gold_bank"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_gold_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:text="银行名"
            android:textColor="@color/font_c9"
            app:layout_constraintLeft_toLeftOf="@id/tv_gold_title_1"
            app:layout_constraintTop_toBottomOf="@id/tv_gold_title_1" />

        <TextView
            android:id="@+id/tv_gold_bank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:textColor="@color/font_c3"
            app:layout_constraintLeft_toRightOf="@id/tv_gold_title_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_gold_title_2" />

        <TextView
            android:id="@+id/tv_gold_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:text="卡号"
            android:textColor="@color/font_c9"
            app:layout_constraintLeft_toLeftOf="@id/tv_gold_title_1"
            app:layout_constraintTop_toBottomOf="@id/tv_gold_title_2" />

        <TextView
            android:id="@+id/tv_gold_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/font_c3"
            app:layout_constraintLeft_toLeftOf="@id/tv_gold_bank"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_gold_title_3" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>