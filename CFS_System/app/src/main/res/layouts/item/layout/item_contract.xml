<?xml version="1.0" encoding="utf-8"?>
<com.xiaoxiao.widgets.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="false">

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/clicked"
        android:orientation="vertical"
        android:padding="@dimen/size_10">

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pact_numb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="0121603280203"
                android:textColor="@color/font_home"
                android:textSize="@dimen/word_15" />

            <TextView
                android:id="@+id/tv_salesman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="2"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户名称："
                android:textColor="@color/font_c6"
                android:textSize="@dimen/word_15" />

            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_15" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_c9"
                android:textSize="@dimen/word_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合同项目："
                android:textColor="@color/font_c6"
                android:textSize="@dimen/word_15" />

            <TextView
                android:id="@+id/tv_pact_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款笔数："
                android:textColor="@color/font_c6"
                android:textSize="@dimen/word_15" />

            <TextView
                android:id="@+id/tv_loan_nub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合同状态："
                android:textColor="@color/font_c6"
                android:textSize="@dimen/word_15" />

            <TextView
                android:id="@+id/tv_contract_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_15" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#cc0000"
        android:gravity="center"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/word_18" />
</com.xiaoxiao.widgets.SwipeMenuLayout>