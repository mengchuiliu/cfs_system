<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/size_15"
    android:paddingRight="@dimen/size_15">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_8"
        android:paddingTop="@dimen/size_8"
        android:textColor="@color/font_home"
        android:textSize="@dimen/word_15" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/forget_psw_bg"
        android:inputType="textMultiLine"
        android:padding="@dimen/size_8"
        android:textSize="@dimen/word_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_add_honor"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <ImageView
        android:id="@+id/iv_add_honor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/size_5"
        android:src="@mipmap/honor_add"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/et_input"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_input" />
</android.support.constraint.ConstraintLayout>