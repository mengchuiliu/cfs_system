<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clicked_white"
    android:padding="@dimen/size_16">

    <TextView
        android:id="@+id/tv_topup_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_17" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/detail1"
        android:textSize="@dimen/word_16"
        app:layout_constraintBottom_toBottomOf="@id/tv_topup_code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_topup_code" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:textColor="@color/font_c6"
        app:layout_constraintLeft_toLeftOf="@id/tv_topup_code"
        app:layout_constraintTop_toBottomOf="@id/tv_topup_code" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c9"
        android:textSize="@dimen/word_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_company_name"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>