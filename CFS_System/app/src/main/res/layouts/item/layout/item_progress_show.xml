<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/clicked"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rank_nub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6"
                android:layout_marginRight="@dimen/size_6"
                android:textColor="#f84848" />

            <TextView
                android:id="@+id/tv_rank_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_13" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_13"
                android:visibility="gone" />
        </LinearLayout>

        <com.xiaoxiao.widgets.PercentProgress
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_weight="1"
            android:progress="50"
            android:progressDrawable="@drawable/progress_color_6" />

        <ProgressBar
            android:id="@+id/progress_visit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_weight="1"
            android:progress="50"
            android:progressDrawable="@drawable/progress_color_6"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/font_dd" />
</LinearLayout>