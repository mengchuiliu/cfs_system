<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clicked_white"
    android:padding="@dimen/size_12">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合同编号：    "
            android:textColor="@color/font_c5" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_5"
            android:paddingTop="@dimen/size_2"
            android:textColor="@color/font_c3"
            android:textSize="@dimen/word_13"
            app:layout_constraintLeft_toRightOf="@id/tv_code_title"
            app:layout_constraintRight_toLeftOf="@id/tv_apply_date" />

        <View
            android:id="@+id/v_blank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_8"
            app:layout_constraintTop_toBottomOf="@id/tv_code" />

        <TextView
            android:id="@+id/tv_customer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户姓名：    "
            android:textColor="@color/font_c5"
            app:layout_constraintTop_toBottomOf="@id/v_blank" />

        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/font_c3"
            app:layout_constraintLeft_toRightOf="@id/tv_customer_title"
            app:layout_constraintRight_toLeftOf="@id/tv_apply_date"
            app:layout_constraintTop_toTopOf="@id/tv_customer_title" />

        <TextView
            android:id="@+id/tv_apply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/size_2"
            android:textSize="@dimen/word_13"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_loan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="贷款用途：    "
        android:textColor="@color/font_c5"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/tv_loan_used"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toRightOf="@id/tv_loan_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_loan_title" />

    <TextView
        android:id="@+id/tv_apply_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="申请金额："
        android:textColor="@color/font_c5"
        app:layout_constraintTop_toBottomOf="@id/tv_loan_used" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/detail1"
        app:layout_constraintLeft_toLeftOf="@id/tv_loan_used"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_apply_amount" />

    <TextView
        android:id="@+id/tv_apply_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="申请期限："
        android:textColor="@color/font_c5"
        app:layout_constraintTop_toBottomOf="@id/tv_amount" />

    <TextView
        android:id="@+id/tv_deadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toLeftOf="@id/tv_loan_used"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_apply_deadline" />

    <TextView
        android:id="@+id/tv_apply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="申请拆借人："
        android:textColor="@color/font_c5"
        app:layout_constraintTop_toBottomOf="@id/tv_deadline" />

    <TextView
        android:id="@+id/tv_apply_people"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toLeftOf="@id/tv_loan_used"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_apply_title" />

    <TextView
        android:id="@+id/tv_borrow_state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="拆借状态："
        android:textColor="@color/font_c5"
        app:layout_constraintTop_toBottomOf="@id/tv_apply_people" />

    <TextView
        android:id="@+id/tv_borrow_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toLeftOf="@id/tv_loan_used"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_borrow_state_title" />

</android.support.constraint.ConstraintLayout>