<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_10"
    android:background="@drawable/clicked_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_12"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginRight="@dimen/size_18"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/gold_user_bg"
        android:gravity="center"
        android:padding="@dimen/size_10"
        android:text="客户"
        android:textColor="@color/font_home"
        android:textSize="@dimen/word_13" />

    <View
        android:layout_width="@dimen/size_1"
        android:layout_height="match_parent"
        android:background="@color/blank_bg"
        app:layout_constraintLeft_toRightOf="@id/tv_name" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_weight="1"
        android:padding="@dimen/size_12">

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="140dp"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_15" />

            <TextView
                android:id="@+id/tv_customer_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_10"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:textColor="@color/font_c9"
            android:textSize="@dimen/word_10"
            app:layout_constraintTop_toBottomOf="@id/ll_name" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>