<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_10"
    android:paddingTop="@dimen/size_10">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/font_c5"
        android:textSize="@dimen/word_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_interest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_amount" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_12"
        android:textColor="@color/font_c5"
        android:textSize="@dimen/word_14"
        app:layout_constraintLeft_toLeftOf="@id/tv_interest"
        app:layout_constraintRight_toRightOf="@id/tv_interest" />

    <TextView
        android:id="@+id/tv_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_8"
        android:textColor="@color/font_c9"
        android:textSize="@dimen/word_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_amount" />
</android.support.constraint.ConstraintLayout>