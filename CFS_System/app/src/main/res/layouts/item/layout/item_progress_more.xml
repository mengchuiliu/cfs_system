<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clicked"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/size_12">

        <TextView
            android:id="@+id/tv_rank_nub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="#f84848" />

        <TextView
            android:id="@+id/tv_rank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="上海国际科技"
            android:textColor="@color/font_c3"
            android:textSize="@dimen/word_13" />

        <TextView
            android:id="@+id/tv_InTimeReceiveRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/detail1"
            android:textSize="@dimen/word_13"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_5"
        android:paddingLeft="@dimen/size_12"
        android:paddingRight="@dimen/size_12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回款量（"
                android:textColor="@color/font_c5"
                android:textSize="@dimen/word_12" />

            <TextView
                android:id="@+id/tv_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxEms="5"
                android:singleLine="true"
                android:text="299000000万"
                android:textColor="@color/font_c5"
                android:textSize="@dimen/word_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="）"
                android:textColor="@color/font_c5"
                android:textSize="@dimen/word_12" />
        </LinearLayout>

        <com.xiaoxiao.widgets.PercentProgress
            android:id="@+id/progress_return"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="13dp"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:progress="50"
            android:progressDrawable="@drawable/progress_color_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_12"
        android:paddingLeft="@dimen/size_12"
        android:paddingRight="@dimen/size_12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回款量（"
                android:textColor="@color/font_c5"
                android:textSize="@dimen/word_12" />

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxEms="5"
                android:singleLine="true"
                android:text="200笔"
                android:textColor="@color/font_c5"
                android:textSize="@dimen/word_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="）"
                android:textColor="@color/font_c5"
                android:textSize="@dimen/word_12" />
        </LinearLayout>

        <com.xiaoxiao.widgets.PercentProgress
            android:id="@+id/progress_signature"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="13dp"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:progress="50"
            android:progressDrawable="@drawable/progress_color_6" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_3"
        android:background="@color/font_dd" />
</LinearLayout>