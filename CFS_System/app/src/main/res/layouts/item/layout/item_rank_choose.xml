<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_F2"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="@dimen/size_12">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/size_10"
            android:singleLine="true"
            android:textColor="@color/font_c3"
            android:textSize="@dimen/word_13" />

        <ImageView
            android:id="@+id/iv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-5dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_unfold_rank" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_6"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rank_choose_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size_1"
            android:paddingRight="@dimen/size_1">

            <TextView
                android:id="@+id/tv_month_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_1"
                android:layout_marginTop="@dimen/size_1"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="@dimen/size_3"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/font_home" />

            <TextView
                android:id="@+id/tv_month_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_1"
                android:layout_marginTop="@dimen/size_1"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size_3"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/font_home" />

            <TextView
                android:id="@+id/tv_month_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_1"
                android:layout_marginTop="@dimen/size_1"
                android:layout_weight="1"
                android:background="@color/font_home"
                android:gravity="center"
                android:padding="@dimen/size_3"
                android:textColor="@color/white"
                android:textSize="@dimen/word_12" />

            <View
                android:id="@+id/line_type"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/font_home"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_1"
                android:layout_marginRight="@dimen/size_1"
                android:layout_marginTop="@dimen/size_1"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size_3"
                android:textColor="@color/font_home"
                android:textSize="@dimen/word_12"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_year_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size_3"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_15" />

            <TextView
                android:id="@+id/tv_year_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size_3"
                android:textColor="@color/font_c3"
                android:textSize="@dimen/word_13" />

            <TextView
                android:id="@+id/tv_year_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bt_theme_bg"
                android:gravity="center"
                android:padding="@dimen/size_3"
                android:textColor="@color/white"
                android:textSize="@dimen/word_13" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>