<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clicked_white"
    android:padding="@dimen/size_8">

    <TextView
        android:id="@+id/tv_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="流水号："
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_13" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_13"
        app:layout_constraintLeft_toRightOf="@id/tv_number_title"
        app:layout_constraintRight_toLeftOf="@id/tv_date" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/word_13"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_8"
        android:background="@color/store_2"
        app:layout_constraintTop_toBottomOf="@id/tv_number" />

    <TextView
        android:id="@+id/tv_company_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="所属门店："
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_13"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_home"
        android:textSize="@dimen/word_13"
        app:layout_constraintLeft_toRightOf="@id/tv_company_title"
        app:layout_constraintTop_toTopOf="@id/tv_company_title" />

    <TextView
        android:id="@+id/tv_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="交易金额："
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_amount"
        app:layout_constraintTop_toBottomOf="@id/tv_company" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/detail1"
        android:textSize="@dimen/word_13"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_amount_title"
        app:layout_constraintRight_toLeftOf="@id/tv_state_title"
        app:layout_constraintTop_toTopOf="@id/tv_amount_title" />

    <TextView
        android:id="@+id/tv_state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_8"
        android:text="交易状态："
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_13"
        app:layout_constraintLeft_toRightOf="@id/tv_amount"
        app:layout_constraintRight_toLeftOf="@id/tv_state"
        app:layout_constraintTop_toTopOf="@id/tv_amount_title" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/word_13"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintLeft_toRightOf="@id/tv_state_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_amount_title" />

    <TextView
        android:id="@+id/tv_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="交易类型："
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_13"
        app:layout_constraintTop_toBottomOf="@id/tv_amount_title" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_13"
        app:layout_constraintLeft_toLeftOf="@id/tv_amount"
        app:layout_constraintRight_toRightOf="@id/tv_amount"
        app:layout_constraintTop_toTopOf="@id/tv_type_title" />

    <TextView
        android:id="@+id/tv_operator_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="操作人："
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_13"
        app:layout_constraintRight_toRightOf="@id/tv_state_title"
        app:layout_constraintTop_toTopOf="@id/tv_type_title" />

    <TextView
        android:id="@+id/tv_operator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_13"
        app:layout_constraintLeft_toRightOf="@id/tv_operator_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_type_title" />

    <TextView
        android:id="@+id/tv_remark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="备注："
        android:textSize="@dimen/word_13"
        app:layout_constraintTop_toBottomOf="@id/tv_type_title" />

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易失败"
        android:textColor="@color/detail1"
        android:textSize="@dimen/word_13"
        app:layout_constraintLeft_toRightOf="@id/tv_remark_title"
        app:layout_constraintTop_toTopOf="@id/tv_remark_title" />
</android.support.constraint.ConstraintLayout>