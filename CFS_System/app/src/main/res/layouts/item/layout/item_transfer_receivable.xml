<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/size_15"
    android:paddingTop="@dimen/size_10">

    <TextView
        android:id="@+id/tv_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贷款产品"
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_14"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_loan_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_14"
        app:layout_constraintLeft_toLeftOf="@+id/tv_salesman"
        app:layout_constraintRight_toRightOf="@+id/tv_salesman"
        app:layout_constraintTop_toTopOf="@id/tv_title_1" />

    <TextView
        android:id="@+id/tv_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:text="金        额"
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_14"
        app:layout_constraintTop_toBottomOf="@id/tv_title_1" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/detail1"
        android:textSize="@dimen/word_14"
        app:layout_constraintLeft_toLeftOf="@+id/tv_salesman"
        app:layout_constraintRight_toRightOf="@+id/tv_salesman"
        app:layout_constraintTop_toTopOf="@id/tv_title_2" />

    <TextView
        android:id="@+id/tv_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:text="收支类型"
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_14"
        app:layout_constraintTop_toBottomOf="@id/tv_title_2" />

    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_14"
        app:layout_constraintLeft_toLeftOf="@+id/tv_salesman"
        app:layout_constraintRight_toRightOf="@+id/tv_salesman"
        app:layout_constraintTop_toTopOf="@id/tv_title_3" />

    <TextView
        android:id="@+id/tv_title_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:text="所属客户"
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_14"
        app:layout_constraintTop_toBottomOf="@id/tv_title_3" />

    <TextView
        android:id="@+id/tv_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_14"
        app:layout_constraintLeft_toLeftOf="@+id/tv_salesman"
        app:layout_constraintRight_toRightOf="@+id/tv_salesman"
        app:layout_constraintTop_toTopOf="@id/tv_title_4" />

    <TextView
        android:id="@+id/tv_title_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginTop="@dimen/size_6"
        android:text="所属业务员"
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_4" />

    <TextView
        android:id="@+id/tv_salesman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_14"
        app:layout_constraintLeft_toRightOf="@id/tv_title_5"
        app:layout_constraintRight_toLeftOf="@+id/iv_check"
        app:layout_constraintTop_toTopOf="@id/tv_title_5" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/size_12"
        android:src="@mipmap/transfer_no"
        app:layout_constraintBottom_toBottomOf="@id/tv_salesman"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/blank_bg"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>