<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clicked_white"
    android:padding="@dimen/size_12">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_15" />

    <TextView
        android:id="@+id/tv_loan_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:gravity="center_vertical"
        android:text="  贷款编号："
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_15"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <TextView
        android:id="@+id/tv_loan_code"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_15"
        app:layout_constraintBottom_toBottomOf="@id/tv_loan_code_title"
        app:layout_constraintLeft_toRightOf="@id/tv_loan_code_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_loan_code_title" />

    <TextView
        android:id="@+id/tv_customer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:text="  申请客户："
        android:textColor="@color/font_home"
        android:textSize="@dimen/word_15"
        app:layout_constraintTop_toBottomOf="@id/tv_loan_code_title" />

    <TextView
        android:id="@+id/tv_customer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textColor="@color/font_home"
        android:textSize="@dimen/word_15"
        app:layout_constraintBottom_toBottomOf="@id/tv_customer_title"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_customer_title" />

    <TextView
        android:id="@+id/tv_apply_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:text="  放款金额："
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_15"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_title" />

    <TextView
        android:id="@+id/tv_apply_amount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_15"
        app:layout_constraintBottom_toBottomOf="@id/tv_apply_amount_title"
        app:layout_constraintLeft_toRightOf="@id/tv_apply_amount_title"
        app:layout_constraintRight_toLeftOf="@id/return_day"
        app:layout_constraintTop_toTopOf="@id/tv_apply_amount_title" />

    <TextView
        android:id="@+id/return_day"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textColor="@color/detail1"
        android:textSize="@dimen/word_15"
        app:layout_constraintBottom_toBottomOf="@id/tv_apply_amount_title"
        app:layout_constraintLeft_toRightOf="@id/tv_apply_amount"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_apply_amount_title" />
</android.support.constraint.ConstraintLayout>