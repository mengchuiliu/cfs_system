<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/size_15"
    android:paddingRight="@dimen/size_15"
    android:paddingTop="@dimen/size_10">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/file_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_icon">

        <TextView
            android:id="@+id/tv_customer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户姓名：" />

        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/font_c3"
            app:layout_constraintLeft_toRightOf="@id/tv_customer_title"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_file_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:text="文件类型："
            app:layout_constraintLeft_toLeftOf="@id/tv_customer_title"
            app:layout_constraintRight_toRightOf="@id/tv_customer_title"
            app:layout_constraintTop_toBottomOf="@id/tv_customer" />

        <TextView
            android:id="@+id/tv_file_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/detail1"
            app:layout_constraintLeft_toRightOf="@id/tv_file_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_file_title" />

        <TextView
            android:id="@+id/tv_file_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:text="文件名称："
            app:layout_constraintLeft_toLeftOf="@id/tv_customer_title"
            app:layout_constraintRight_toRightOf="@id/tv_customer_title"
            app:layout_constraintTop_toBottomOf="@id/tv_file_type" />

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/font_c3"
            app:layout_constraintLeft_toRightOf="@id/tv_file_name_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_file_name_title" />

        <TextView
            android:id="@+id/tv_file_size_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:text="文件大小："
            app:layout_constraintLeft_toLeftOf="@id/tv_customer_title"
            app:layout_constraintRight_toRightOf="@id/tv_customer_title"
            app:layout_constraintTop_toBottomOf="@id/tv_file_name" />

        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/font_c3"
            app:layout_constraintLeft_toRightOf="@id/tv_customer_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_file_size_title" />

        <TextView
            android:id="@+id/tv_service_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:text=" 上 传 者 ："
            app:layout_constraintLeft_toLeftOf="@id/tv_customer_title"
            app:layout_constraintRight_toRightOf="@id/tv_customer_title"
            app:layout_constraintTop_toBottomOf="@id/tv_file_size" />

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/font_c3"
            app:layout_constraintLeft_toRightOf="@id/tv_customer_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_service_title" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_remark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:text=" 备 注 ："
        app:layout_constraintTop_toBottomOf="@id/file_detail" />

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c3"
        app:layout_constraintLeft_toRightOf="@id/tv_remark_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_remark_title" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@mipmap/photo"
        app:layout_constraintBottom_toBottomOf="@id/file_detail"
        app:layout_constraintLeft_toRightOf="@id/file_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/file_detail" />

    <TextView
        android:id="@+id/tv_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击查看"
        android:textColor="@color/font_home"
        android:textSize="@dimen/word_12"
        app:layout_constraintLeft_toLeftOf="@id/iv_icon"
        app:layout_constraintRight_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/size_8"
        android:background="@color/store_2"
        app:layout_constraintTop_toBottomOf="@id/tv_remark" />
</android.support.constraint.ConstraintLayout>