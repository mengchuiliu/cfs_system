<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/size_15"
    android:paddingRight="@dimen/size_15"
    android:paddingTop="@dimen/size_10">

    <ImageView
        android:id="@+id/iv_content_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/size_10"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/choose_blue"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_c6"
        android:textSize="@dimen/word_15" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/font_c3"
        android:textSize="@dimen/word_15" />

    <TextView
        android:id="@+id/tv_content_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:textSize="@dimen/word_12"
        android:visibility="gone" />
</LinearLayout>